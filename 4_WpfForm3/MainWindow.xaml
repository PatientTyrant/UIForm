<Window x:Class="_4_WpfForm3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_WpfForm3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="bgRed" Color="Red"></SolidColorBrush>
        <SolidColorBrush x:Key="textWhite" Color="White"></SolidColorBrush>

    </Window.Resources>

    <StackPanel>

        <Button Height="50" Background="{StaticResource bgRed}" Foreground="{StaticResource textWhite}" Content="Test Button">
            <!--<Button.Background>
                <SolidColorBrush Color="Red"> </SolidColorBrush>
            </Button.Background>-->
        </Button>

        <Button Foreground="{DynamicResource GenelText}" Content="Ben Buttons"/>
    </StackPanel>
</Window>
